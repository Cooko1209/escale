<!DOCTYPE html>
<html lang="zh-Hant">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@AppService.AppName</title>

    <link href="https://unpkg.com/swiper/swiper-bundle.min.css" rel="stylesheet" />
     @* <link href="@Url.Content("~/lib/ESCALE/Home/css/s6.css")" rel="stylesheet" /> *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="@Url.Content("~/lib/ESCALE/Home/css/index.css")">

    @* 依需求引入不同樣式表 *@

    <link rel="stylesheet" href="@Url.Content("~/css/site.css")" asp-append-version="true" />

@await RenderSectionAsync("Styles", required: false)
<script src="@Url.Content("~/js/site.js")" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)

</head>

<body>

    <div class="con mb-l">
        <nav class="navbar fix-top navbar-expand-lg navbar-light bg-light ">
            <!-- <div class="container-fluid"> -->
            <a class="navbar-brand p-3" href="#">
                <img src="@Url.Content("~/lib/ESCALE/Home/image/handshake (1).png")" alt="Brand" style="height: 30px;">
            </a>

            <button data-bs-toggle="collapse" data-bs-target=".collapse" class="navbar-toggler">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end ">
                <ul class="navbar-nav text-center   ">
                    <!-- nav=link 水平呈現,navbar-nav=垂直呈現 text-center=內容居-->
                    <li class="nav-item  ">
                        <a href="@Url.Action("Login" , "User" , new {area = ""})" class="nav-link text-dark fs-5">會員首頁</a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Record" , "User" , new {area = ""})" class="nav-link text-dark fs-5">雲端資料庫</a>
                    </li>
                    <li class="nav-item"><a href="@Url.Action("Index" , "Category" , new {area = "", id = ""})" class="nav-link text-dark fs-5">購物車</a>
                    </li>
                    <li class="nav-item"> <a href="@Url.Action("Contact" , "Home" , new {area = "" })"class="nav-link text-dark fs-5">聯絡我們</a>
                    </li>
                    <li class="nav-item">
                        <div class="common__lightbox-box">
                            <div class="search-lightbox">
                                <a class="search-lightbox__close" data-lightbox-close=""></a>
                                <div class="search-lightbox__box">
                                    <form action="/search" onsubmit="return search()" class="search-lightbox__form">
                                        <input type="text" name="q" value="" placeholder="請輸入關鍵字搜尋...">
                                        <button type="submit"><img
                                                src="@Url.Content("~/lib/ESCALE/Home/image/magnifying-glass.png")"
                                                alt="搜索圖標"></button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    @RenderBody()
    <div class="footer">
        <div class="social">
            <a href="@Url.Action("About" , "Home" , new {area = "" })">關於我們</a>
@* 不知道要不要改 要測試效果 *@

        @* <li><a href="@Url.Action("Contact" , "Home" , new {area = "" })">聯絡我們</a></li>  *@
        </div>
        <div class="social-icons">
            <a href="#" class="social-icon"><i class="fab fa-line"></i></a>
            <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
            <a href="#" class="social-icon"><i class="fab fa-facebook"></i></a>
        </div>

      <div class="copy d-flex justify-content-start ms-5">
        <p>&copy; @DateTime.Today.Year @AppService.Designer</p>
      </div>

    </div>
    @await RenderSectionAsync("ScriptsBody", required: false)
</body>
